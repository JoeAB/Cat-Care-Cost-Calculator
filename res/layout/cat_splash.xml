<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
        >
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtTitle"
            android:id="@+id/txtTitle" android:layout_centerVertical="true" android:layout_centerHorizontal="true"
            android:background="@drawable/cat_splash" android:contentDescription="@string/splashDescription"
            android:gravity="bottom|center" android:paddingBottom="15dp" android:textColor="#ffffff"
            android:textSize="30sp" android:textStyle="bold" android:textIsSelectable="false"/>
</RelativeLayout>